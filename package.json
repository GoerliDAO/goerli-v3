{
    "name": "forge-template",
    "author": "FrankieIsLost",
    "version": "1.0.0",
    "description": "A forge template",
    "homepage": "https://github.com/FrankieIsLost/forge-template#readme",
    "repository": "git+https://github.com/FrankieIsLost/forge-template.git",
    "scripts": {
        "build": "chmod +x shell/* && ./shell/full_install.sh",
        "prettier": "prettier --write 'src/**/*.sol'",
        "prettier:list": "prettier --list-different 'src/**/*.sol'",
        "prettier:check": "prettier --check 'src/**/*.sol'",
        "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
        "solhint:check": "solhint --config ./.solhint.json 'src/**/*.sol'",
        "lint": "npm run prettier && npm run solhint",
        "lint:check": "npm run prettier:check && npm run solhint:check",
        "test": "./shell/test_all.sh"
    },
    "devDependencies": {
        "@typechain/ethers-v5": "^10.2.0",
        "prettier": "^2.5.1",
        "prettier-plugin-solidity": "^1.0.0-beta.19",
        "solhint": "^3.3.7",
        "typechain": "^8.1.1"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false,
        "bracketSpacing": false,
        "printWidth": 100
    },
    "dependencies": {
        "@ethersproject/abi": "^5.7.0",
        "@ethersproject/address": "^5.7.0",
        "@ethersproject/bytes": "^5.7.0",
        "@ethersproject/providers": "^5.7.2",
        "ethers": "5",
        "hardhat": "^2.13.0",
        "hardhat-preprocessor": "^0.1.5",
        "typechain-target-react-query-wagmi": "^0.1.0",
        "typescript": "^5.0.2"
    }
}
